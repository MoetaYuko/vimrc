{
  // clangd
  "clangd.arguments": ["--query-driver=**/*"],
  "clangd.semanticHighlighting": true,
  // coc
  "coc.preferences.formatOnType": true,
  // explorer
  "explorer.icon.enableNerdfont": true,
  "explorer.filename.colored.enable": true,
  // html
  "html.autoClosingTags": true,
  // latex
  "latex.build.args": [
    "-pdf",
    "-shell-escape",
    "-interaction=nonstopmode",
    "-synctex=1"
  ],
  "latex.forwardSearch.executable": "okular",
  "latex.forwardSearch.args": [
    "--unique",
    "file:%p#src:%l%f"
  ],
  // python
  "python.linting.pylintEnabled": false,
  "python.linting.flake8Enabled": true,
  "python.linting.enabled": true,
  "python.formatting.provider": "yapf",
  // rainbow-fart
  "rainbow-fart.locale": ["jp"],
  "rainbow-fart.ffplay": "ffplay",
  "rainbow-fart.voice-packages": [
    "$HOME/kugimiya-voice"
  ],
  // rust
  "rust-client.disableRustup": true,
  // lsp
  "languageserver": {
    "bash": {
      "command": "bash-language-server",
      "args": [
        "start"
      ],
      "filetypes": [
        "sh"
      ],
      "ignoredRootPaths": [
        "~"
      ]
    }
  }
}
