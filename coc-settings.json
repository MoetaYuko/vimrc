{
  // clangd
  "clangd.arguments": ["--query-driver=**/*"],
  "clangd.semanticHighlighting": true,
  // coc
  "coc.preferences.formatOnType": true,
  // explorer
  "explorer.icon.enableNerdfont": true,
  "explorer.filename.colored.enable": true,
  // html
  "html.autoClosingTags": true,
  // python
  "python.linting.pylintEnabled": false,
  "python.linting.flake8Enabled": true,
  "python.linting.enabled": true,
  "python.formatting.provider": "yapf",
  "python.analysis.stubPath": "~/.vim/python-type-stubs",
  // rainbow-fart
  "rainbow-fart.locale": ["jp"],
  "rainbow-fart.ffplay": "ffplay",
  "rainbow-fart.voice-packages": [
    "$HOME/.vim/kugimiya-voice"
  ],
  // rust
  "rust-client.disableRustup": true,
  // lsp
  "languageserver": {
    "bash": {
      "command": "bash-language-server",
      "args": [
        "start"
      ],
      "filetypes": [
        "sh"
      ],
      "ignoredRootPaths": [
        "~"
      ]
    }
  }
}
